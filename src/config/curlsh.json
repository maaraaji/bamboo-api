{
    "_comment": "Configuration file for the bamboo API URL's.",
    "dvs":{
        "getStatus": "rest/api/latest/deploy/version/{deploymentVersionId}/status.json"
    },
    "search": {
        "plans": {
            "uri": "rest/api/latest/search/plans.json",
            "howMany": "size",
            "inPlans": {
                "parent": "searchResults[]",
                "getId": "searchEntity.id",
                "getProjectName": "searchEntity.projectName",
                "getPlanName": "searchEntity.planName",
                "getConfiguredBranch": "searchEntity.branchName",
                "getDescription": "searchEntity.description"
            }
        },
        "users": "rest/api/latest/search/users.json"
    }
}